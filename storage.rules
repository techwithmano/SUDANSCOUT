
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for all files (product images, profile pictures).
    // Restrict writes to authenticated admins.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'sudanscoutadmin@scout.com';
    }
  }
}
