rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /scout-images/{allPaths=**} {
      // Allow anyone to read images
      allow read;
      // Allow admins to write (upload, update, delete)
      allow write: if request.auth != null && request.auth.token.email == 'sudanscoutadmin@scout.com';
    }
  }
}
